package com.myspace.mymortgagedemo;

import java.lang.Number;

rule "Calculate Downpayment"
	dialect "mvel"
	ruleflow-group "calculateMortgage"
	salience 0
	when
		app : Application( margin > 0.0 , price > 0.0 )
	then
		app.setDownPayment( (app.margin/100) * app.price );
		app.setMortgageAmount( app.price - app.downPayment );
		app.setInstallment( calculateInstallment (app.mortgageAmount, app.interest, app.amortization) );
end
